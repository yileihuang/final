<% if @touristsite.errors.any? %>
  <div class="alert alert-warning" role="alert">
    <% @touristsite.errors.full_messages.each do |message| %>
      <%= message %><br>
    <% end %>
  </div>
<% end %>

<%= form_for [@group, @visit, @touristsite], html: { multipart: true } do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :city %>
    <%= form.text_field :city, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :country %>
    <%= form.text_field :country, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :image %>
    <%= file_field_tag :image %>
  </div>
  <div class="form-group">
    <%= form.label :Summary %>
    <%= form.text_field :Summary, class: "form-control" %>
  </div>
  <%= form.submit 'Create', class: "btn btn-success" %>
<% end %>