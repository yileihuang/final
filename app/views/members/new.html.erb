<% if @member.errors.any? %>
  <div class="alert alert-warning" role="alert">
    <% @member.errors.full_messages.each do |message| %>
      <%= message %><br>
    <% end %>
  </div>
<% end %>

<%= form_for [@group, @member] do |form| %>
  <div class="form-group">
 <%= form.label :users %>
    <%= form.collection_select(:user_id, User.all, :id, :name) %>
</div>
<div class="form-group">
    <%= form.label :expense %>
    <%= form.number_field :expense, class: "form-control", :step => 'any' %>
  </div>
  <%= form.button 'Add this user into group', class: "btn btn-success" %>
<% end %>