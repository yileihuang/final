<%= form_for [@group, @visit] do |form| %>
<div class="form-group">
 <%= form.label :group %>
    <%= form.collection_select(:group_id, Group.all, :id, :name) %>
</div>
<div class="form-group">
 <%= form.label :touristsite %>
    <%= form.collection_select(:touristsite_id, Touristsite.all, :id, :name) %>
Not in the list? Create your own tourist site by clicking
    <%= link_to "Create new touristsite for your visit", new_touristsite_path, class: 'btn btn-sm btn-primary' %>
</div>
  <%= form.button 'Create Visit', class: "btn btn-success" %>
<% end %>