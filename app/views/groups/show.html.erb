
<div class="dropdown">
  <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
    Manage This Group
    <span class="caret"></span>
  </button>
<ul class="dropdown-menu" role="menu">
<li> <%= link_to "Manage members", group_members_url(group_id: params[:id]) %> </li>
<li> <%= link_to "Manage visits", group_visits_url(group_id: params[:id]) %> </li>
</ul>
</div>
<br>

<div class="row">
<% visit=Visit.where(group_id: params[:id]) %>
<% for v in visit %>
<% for des in Touristsite.where(id: v.touristsite_id) %>
<div class="col-sm-6">
<div class="thumbnail">
<h2 class="text-center"> <%= des.name %> in <%= des.city %>, <%=des.country %> </h2>
<p class="text-center"> <%= des.Summary %> </p>
<p class="text-center"> <%= image_tag des.image, {width: 500} %> </p>
</div>
</div>
<% end %>
<% end %>
</div>
