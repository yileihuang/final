<%= form_for @group, html: { multipart: true } do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :summary %>
    <%= form.text_field :summary, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :image %>
    <%= file_field_tag :image %>
  </div>
  <%= form.submit 'Create Group', class: "btn btn-success" %>
<% end %>
